<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetailMenuActivity">


    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/White"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Orientation">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_judul_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/medium"
                android:text="Makanan"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        tools:layout_editor_absoluteX="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_tanggal"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_black"
            android:elevation="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_date"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/calendar"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_date_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@id/img_date"
                    android:text="Pilih Tanggal"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />

                <View
                    android:id="@+id/view_batas"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/img_date"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:background="#D6D6D6" />

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/view_batas"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/clock"
                    tools:ignore="ContentDescription" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/view_batas"
                    android:layout_toEndOf="@id/img_time"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:id="@+id/radioGroup">

                    <RadioButton
                        android:id="@+id/radio_siang"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Siang"
                        android:onClick="checkButton"
                        android:background="@drawable/bg_btn_waktu"
                        android:button="@android:color/transparent"
                        android:paddingBottom="2dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:checked="true"
                        android:layout_marginEnd="5dp"
                        tools:ignore="HardcodedText" />

                    <RadioButton
                        android:id="@+id/radio_sore"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:text="Sore"
                        android:onClick="checkButton"
                        android:background="@drawable/bg_btn_waktu"
                        android:button="@android:color/transparent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:checked="true"
                        tools:ignore="HardcodedText" />

                </RadioGroup>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/tv_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@color/White"
                    android:fontFamily="@font/reg"
                    android:inputType="none"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tanggal"
                    android:layout_marginStart="7dp"
                    android:background="@color/White"
                    android:fontFamily="@font/reg"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="none"
                    tools:ignore="Autofill,LabelFor" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_detail_menu"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewDate"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nama_katering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/medium"
        android:text="@string/dpawon"
        android:textColor="@color/Red"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/image_detail_menu"
        app:layout_constraintStart_toStartOf="@+id/image_detail_menu"
        app:layout_constraintTop_toBottomOf="@+id/image_detail_menu" />

    <TextView
        android:id="@+id/jenis_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/reg"
        android:text="Nasi Kotak"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_katering"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="@color/AbuMuda"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jenis_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul_detail_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Ayam Gulai"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_line" />

            <TextView
                android:id="@+id/desc_detail_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/reg"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/harga_detail_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_item"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/harga_detail_menu"
                    android:text="Free Ongkir"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_desc_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_free"
                    android:layout_marginTop="20dp"
                    android:text="Jumlah Pesanan Anda"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/jumlah_pesanan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_black"
                android:gravity="center"
                android:text="20"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                tools:ignore="Autofill,HardcodedText,LabelFor"
                android:inputType="number" />

            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_min"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_plus"
                android:layout_marginStart="5dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:ignore="UselessParent">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:id="@+id/text"
             >

             <TextView
                 android:id="@+id/tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/medium"
                 android:text="Total Harga"
                 android:textColor="@android:color/black"
                 tools:ignore="HardcodedText" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/bayar"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginStart="15dp"
             android:layout_below="@id/text">

             <TextView
                 android:id="@+id/rp4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/medium"
                 android:text="Rp."
                 android:textSize="19sp"
                 android:textStyle="bold"
                 android:textColor="@android:color/black"
                 tools:ignore="HardcodedText" />

             <TextView
                 android:id="@+id/total_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="15000"
                 android:textColor="@android:color/black"
                 android:textSize="19sp"
                 android:textStyle="bold"
                 tools:ignore="HardcodedText,ObsoleteLayoutParam" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="right"
             android:layout_marginEnd="15dp"
             android:layout_toEndOf="@+id/bayar"
             tools:ignore="RtlHardcoded">

             <Button
                 android:id="@+id/btn_chart"
                 android:layout_width="200dp"
                 android:layout_height="50dp"
                 android:background="@drawable/btn_orange"
                 android:text="Masuk Keranjang"
                 android:textAllCaps="false"
                 android:textColor="@color/White"
                 android:textSize="18sp"
                 tools:ignore="HardcodedText" />


         </LinearLayout>



     </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>